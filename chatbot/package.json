{
  "name": "goru-chatbot",
  "version": "1.0.0",
  "description": "Gōru Chatbot - AI-powered startup guidance chatbot with WordPress integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "setup": "node scripts/setup.js",
    "migrate-kb": "node scripts/migrate-kb.js",
    "generate-embeddings": "node scripts/generate-embeddings.js"
  },
  "keywords": [
    "chatbot",
    "startup",
    "goru",
    "ai",
    "openai",
    "wordpress"
  ],
  "author": "Gōru Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "openai": "^4.28.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "axios": "^1.6.2",
    "uuid": "^9.0.1",
    "redis": "^4.6.12",
    "pg": "^8.11.3",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "@types/jest": "^29.5.10",
    "dotenv-cli": "^7.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/goruworld/goru-chatbot.git"
  },
  "bugs": {
    "url": "https://github.com/goruworld/goru-chatbot/issues"
  },
  "homepage": "https://www.goruworld.com"
}

