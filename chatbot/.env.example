# G≈çru Chatbot Environment Configuration

# Server
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4

# WordPress Integration
WORDPRESS_URL=https://www.goruworld.com
WORDPRESS_API_KEY=your-wordpress-api-key
WORDPRESS_API_SECRET=your-wordpress-api-secret

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/goru_chatbot
DB_HOST=localhost
DB_PORT=5432
DB_NAME=goru_chatbot
DB_USER=postgres
DB_PASSWORD=password

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://www.goruworld.com

# Knowledge Base
KB_PATH=./knowledge-base/data

# Chatbot Configuration
MAX_CONTEXT_MESSAGES=10
RESPONSE_TIMEOUT=30000

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_PROVIDER=google

# Email Configuration (for escalations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SUPPORT_EMAIL=info@goruworld.com

# Shop Configuration
SHOP_URL=https://www.goruworld.com/shop/
SHOP_API_KEY=your-shop-api-key

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your-datadog-api-key

# Feature Flags
FEATURE_BUNDLE_RECOMMENDATION=true
FEATURE_ESCALATION=true
FEATURE_ANALYTICS=true
FEATURE_FEEDBACK=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your-session-secret-key
ENCRYPTION_KEY=your-encryption-key

# Development
DEBUG=goru-chatbot:*

